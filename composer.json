{
    "name": "ivory-php/ivory",
    "description": "The Ivory CLI Framework.",
    "keywords": [ "framework", "ivory" ],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.6.4",
        "ivory-php/framework": "0.1.*"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.0"
    },
    "autoload": {
        "classmap": ["database"],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": ["tests/TestCase.php"]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}